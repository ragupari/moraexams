---
interface Astro {
	title: string;
	rank: number;
}

const { title, rank } = Astro.props;
---

<div class="flex flex-col items-center rounded-lg p-4 pt-2">
	<span class="text-lg text-center leading-5 mb-2">
		{title}
	</span>
	<span class="text-7xl md:text-6xl font-semibold">
		{rank}
	</span>
</div>
